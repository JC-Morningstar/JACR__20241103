@model JACR__20241103.Models.Empleado

@{
    ViewData["Title"] = "Edit";
}
<style>
    body {
        background-color: lightblue;
        background-size: cover;
        background-repeat: no-repeat;
    }
</style>
<h1>Editar Empleado</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" required />
                <span asp-validation-for="Nombre" class="text-danger"></span>
                <div class="invalid-feedback">Por favor, introduce un nombre.</div>
            </div>
            <div class="form-group">
                <label asp-for="Apellido" class="control-label">Apellido</label>
                <input asp-for="Apellido" class="form-control" required />
                <span asp-validation-for="Apellido" class="text-danger"></span>
                <div class="invalid-feedback">Por favor, introduce un apellido.</div>
            </div>
            <div class="form-group">
                <label asp-for="Edad" class="control-label">Edad</label>
                <input asp-for="Edad" class="form-control" required />
                <span asp-validation-for="Edad" class="text-danger"></span>
                <div class="invalid-feedback">Por favor, introduce una edad válida.</div>
            </div>
            <div class="form-group">
                <label asp-for="Departamento" class="control-label">Departamento</label>
                <input asp-for="Departamento" class="form-control" required />
                <span asp-validation-for="Departamento" class="text-danger"></span>
                <div class="invalid-feedback">Por favor, introduce un departamento.</div>
            </div>
            <div class="form-group">
                <label asp-for="Salario" class="control-label">Salario</label>
                <input asp-for="Salario" class="form-control" required />
                <span asp-validation-for="Salario" class="text-danger"></span>
                <div class="invalid-feedback">Por favor, introduce un salario válido.</div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
