@model JACR__20241103.Models.Empleado

@{
    ViewData["Title"] = "Details";
}
<style>
    body {
        background-color: lightblue;
        background-size: cover;
        background-repeat: no-repeat;
    }
</style>

<div class="container">
    <h1 class="mt-4">Detalles del Empleado</h1>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card" style=" background-color: lightblue;">
                <div class="card-body">
                    <h4 class="card-title">Empleado</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Nombre</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>
                        <dt class="col-sm-4">Apellido</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Apellido)</dd>
                        <dt class="col-sm-4">Edad</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Edad)</dd>
                        <dt class="col-sm-4">Departamento</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Departamento)</dd>
                        <dt class="col-sm-4">Salario</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Salario)</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <h3>Referencias Personales</h3>
        @if (Model.ReferenciasPersonales != null && Model.ReferenciasPersonales.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Teléfono</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var referencia in Model.ReferenciasPersonales)
                    {
                        <tr>
                            <td>@referencia.Nombre</td>
                            <td>@referencia.Apellido</td>
                            <td>@referencia.Telefono</td>
                            <td>
                                <a asp-controller="ReferenciasPersonales" asp-action="Edit" asp-route-id="@referencia.Id" class="btn btn-sm btn-primary">Editar</a>
                                <a asp-controller="ReferenciasPersonales" asp-action="Delete" asp-route-id="@referencia.Id" class="btn btn-sm btn-danger">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No hay referencias personales registradas para este empleado.</p>
        }
    </div>

    <div class="mt-4">
        <a asp-controller="ReferenciasPersonales" asp-action="Create" asp-route-empleadoId="@Model.Id" class="btn btn-primary">Agregar Referencia Personal</a>
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </div>
</div>
