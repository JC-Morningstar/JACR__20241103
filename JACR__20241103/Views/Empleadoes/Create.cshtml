@model JACR__20241103.Models.Empleado

@{
    ViewData["Title"] = "Create";
}
<style>
    body {
        background-color: lightblue;
        background-size: cover;
        background-repeat: no-repeat;
    }
</style>
<div class="container">
    <h1 class="mt-4">Crear Empleado</h1>

    <div class="mt-4">
        <h4>Datos del Empleado</h4>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label for="Nombre" class="col-sm-2 col-form-label">Nombre:</label>
                <div class="col-sm-10">
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="Apellido" class="col-sm-2 col-form-label">Apellido:</label>
                <div class="col-sm-10">
                    <input asp-for="Apellido" class="form-control" />
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="Edad" class="col-sm-2 col-form-label">Edad:</label>
                <div class="col-sm-10">
                    <input asp-for="Edad" class="form-control" />
                    <span asp-validation-for="Edad" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="Departamento" class="col-sm-2 col-form-label">Departamento:</label>
                <div class="col-sm-10">
                    <input asp-for="Departamento" class="form-control" />
                    <span asp-validation-for="Departamento" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="Salario" class="col-sm-2 col-form-label">Salario:</label>
                <div class="col-sm-10">
                    <input asp-for="Salario" class="form-control" />
                    <span asp-validation-for="Salario" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>

    <div class="mt-4">
        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
                <a asp-action="Create" asp-controller="ReferenciasPersonales" asp-route-empleadoId="@Model.Id" class="btn btn-success">Agregar Referencia Personal</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

