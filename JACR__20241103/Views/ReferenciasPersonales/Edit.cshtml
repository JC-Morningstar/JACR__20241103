@model JACR__20241103.Models.ReferenciasPersonale

@{
    ViewData["Title"] = "Edit";
}
<style>
    body {
        background-color: lightblue;
        background-size: cover;
        background-repeat: no-repeat;
    }
</style>

<div class="container">
    <h1 class="mt-4">Editar Referencia Personal</h1>

    <div class="mt-4">
        <h4>Datos de la Referencia Personal</h4>
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group row">
                <label for="EmpleadoId" class="col-sm-2 col-form-label">ID del Empleado:</label>
                <div class="col-sm-10">
                    <select asp-for="EmpleadoId" class="form-control" asp-items="ViewBag.EmpleadoId"></select>
                    <span asp-validation-for="EmpleadoId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label for="Nombre" class="col-sm-2 col-form-label">Nombre:</label>
                <div class="col-sm-10">
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label for="Apellido" class="col-sm-2 col-form-label">Apellido:</label>
                <div class="col-sm-10">
                    <input asp-for="Apellido" class="form-control" />
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label for="Telefono" class="col-sm-2 col-form-label">Teléfono:</label>
                <div class="col-sm-10">
                    <input asp-for="Telefono" class="form-control" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>

    <div class="mt-4">
        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
            </div>
        </div>
    </div>
</div>
