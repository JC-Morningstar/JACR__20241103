@model JACR__20241103.Models.ReferenciasPersonale

@{
    ViewData["Title"] = "Delete";
}
<style>
    body {
        background-color: lightblue;
        background-size: cover;
        background-repeat: no-repeat;
    }
</style>
<div class="container">
    <h1 class="mt-4">Eliminar Referencia Personal</h1>

    <div class="mt-4">
        <h3>¿Estás seguro de que quieres eliminar este registro?</h3>
        <hr />
        <div>
            <h4>Detalles de la Referencia Personal</h4>
            <dl class="row">
                <dt class="col-sm-2">Nombre:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Nombre)</dd>
                <dt class="col-sm-2">Apellido:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Apellido)</dd>
                <dt class="col-sm-2">Teléfono:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Telefono)</dd>
                <dt class="col-sm-2">Empleado ID:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Empleado.Id)</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Eliminar" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
            </form>
        </div>
    </div>
</div>
